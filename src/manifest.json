{
    "manifest_version": 3,
    "name": "Lattice Tabs - AI Tab Manager",
    "version": "0.2.0",
    "description": "Organize tabs with privacy-first Local AI. No data leaves your device.",
    "permissions": [
        "storage",
        "tabs",
        "tabGroups",
        "sidePanel",
        "alarms"
    ],
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "action": {
        "default_title": "Open Lattice",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "options_ui": {
        "page": "src/options/index.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}